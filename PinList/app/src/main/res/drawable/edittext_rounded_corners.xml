<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_pressed="true">
        <shape>
            <solid android:color="@color/pressed" />
            <stroke android:width="2.2999878dip" android:color="@color/bg_light_blue" />
            <corners android:radius="25.0dip" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="true">
        <shape>
            <solid android:color="@color/pressed" />
            <stroke android:width="2.2999878dip" android:color="@color/bg_light_blue" />
            <corners android:radius="25.0dip" />
        </shape>
    </item>
    <item android:state_focused="true" android:state_pressed="false">
        <shape>
            <solid android:color="#ffffffff" />
            <stroke android:width="2.2999878dip" android:color="@color/selected" />
            <corners android:radius="25.0dip" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="false">
        <shape>
            <gradient android:angle="270.0" android:centerColor="#ffffffff" android:endColor="#ffffffff" android:startColor="#fff2f2f2" />
            <stroke android:width="0.70000005dip" android:color="#ffbdbdbd" />
            <corners android:radius="25.0dip" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <padding android:bottom="4.0dip" android:left="4.0dip" android:right="4.0dip" android:top="4.0dip" />
        </shape>
    </item>
</selector>
